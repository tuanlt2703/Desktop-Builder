                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <ContentPresenter/>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
                <StackPanel>
                    <Image Source="/Image/CPU.png" HorizontalAlignment="Center" VerticalAlignment="Center" Height="70" Margin="7,0"/>
